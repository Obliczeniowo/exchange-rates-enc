{
  "name": "exchange-rates",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "npm run copy-assets && ng serve",
    "build": "npm run copy-assets && ng build",
    "instal": "node instal",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "copy-assets": "node ./node_modules/@obliczeniowo/elementary/assets/scripts/copy.js ./src/assets/",
    "build:explorer": "npm run copy-assets && ng build --configuration production --base-href=./",
    "build-git": "npm run build:explorer && cd scripts && node build-and-deploy",
    "encrypt": "cd ./enc && node batch-encdec.js ../config-encrypt.json",
    "decrypt": "cd ./enc && node batch-encdec.js ../config-decrypt.json"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.10",
    "@angular/cdk": "^20.2.12",
    "@angular/common": "^20.2.0",
    "@angular/compiler": "^20.2.0",
    "@angular/core": "^20.2.0",
    "@angular/forms": "^20.2.0",
    "@angular/platform-browser": "^20.2.0",
    "@angular/router": "^20.2.0",
    "country-flag-emoji-polyfill": "^0.1.8",
    "country-flag-icons": "^1.5.21",
    "fs-extra": "^11.3.2",
    "jspdf": "^3.0.3",
    "minimist": "^1.2.8",
    "node-fetch": "^3.3.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.2.0",
    "@angular/cli": "^20.2.0",
    "@angular/compiler-cli": "^20.2.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2"
  }
}
